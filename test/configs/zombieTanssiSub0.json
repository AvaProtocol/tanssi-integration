                },
                {
                    "name": "Collator1000-02",
                    "command": "../target/release/tanssi-node"
                },
                {
                    "name": "Collator2000-01",
                    "command": "../target/release/tanssi-node",
                    "args": ["--no-hardware-benchmarks -- --rpc-cors all --unsafe-rpc-external --rpc-methods unsafe --rpc-port 9949"]

                },
                {
                    "name": "Collator2000-02",
                    "command": "../target/release/tanssi-node"
                }
            ]
        }
    ],
    "types": {
