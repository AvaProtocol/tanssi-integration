        "default_command": "tmp/polkadot",
        "default_args": ["--no-hardware-benchmarks", "-lparachain=debug", "--database=paritydb"],
        "nodes": [
            {
                "name": "alice",
                "ws_port": "9947",
                "validator": true
            },
            {
                "name": "bob",
                "validator": true
            },
            {
                "name": "charlie",
                "validator": true
            },
            {
                "name": "dave",
                "validator": true
            }
