{
  "$schema": "https://raw.githubusercontent.com/Moonsong-Labs/moonwall/main/packages/cli/config_schema.json",
  "label": "MasterConfig ðŸŒ”",
  "defaultTestTimeout": 30000,
  "environments": [
    {
      "name": "dev_tanssi",
      "testFileDir": ["suites/dev"],
      "multiThreads": true,
      "html": false,
      "foundation": {
        "type": "dev",
        "launchSpec": [
          {
            "name": "tanssi",
            "binPath": "../target/release/test-node",
            "ports": { "wsPort": 34002 },
            "options": [
                "--dev",
                "--sealing=manual"
            ]
          }
        ]
      },
      "connections": [
        {
          "name": "Tanssi",
          "type": "polkadotJs",
          "endpoints": ["ws://127.0.0.1:34002"]
        }
      ]
    },
    {
      "name": "zombie_tanssi_ci",
      "testFileDir": ["suites/para"],
      "foundation": {
        "type": "zombie",
        "zombieSpec": {
          "configPath": "./configs/zombieTanssiCI.json"
        }
      },
      "connections": [
        {
          "name": "Relay",
          "type": "polkadotJs",
          "endpoints": ["ws://127.0.0.1:9947"]
        },
        {
          "name": "Tanssi",
          "type": "polkadotJs",
          "endpoints": ["ws://127.0.0.1:9948"]
        }
      ]
    },
    {
      "name": "zombie_tanssi",
      "testFileDir": ["suites/para"],
      "foundation": {
        "type": "zombie",
        "zombieSpec": {
          "configPath": "./configs/zombieTanssi.json"
        }
      },
      "connections": [
        {
          "name": "Relay",
          "type": "polkadotJs",
          "endpoints": ["ws://127.0.0.1:9947"]
        },
        {
          "name": "Tanssi",
          "type": "polkadotJs",
          "endpoints": ["ws://127.0.0.1:9948"]
        }
      ]
    }
  ]
}